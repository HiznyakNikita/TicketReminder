<UserControl x:Class="TicketReminder.Showcase.ForecastWeatherControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  >
    <Grid>
        <StackPanel Margin="5">
            <TextBlock FontSize="14" TextWrapping="Wrap"  TextAlignment="Center" Text="{Binding Day}" Foreground="#FF16929E" VerticalAlignment="Top"/>
            <TextBlock FontSize="14" TextWrapping="Wrap" Margin="0,5,0,0" TextAlignment="Center" Text="{Binding Date}" Foreground="Gray" VerticalAlignment="Top"/>
            <Image Width="110" Height="80" Source="{Binding Image}" VerticalAlignment="Top" Margin="0,5,0,0"/>
            <TextBlock Margin="0,2,0,0" Text="{Binding Conditions}" TextAlignment="Center" FontSize="14" ></TextBlock>
            <TextBlock Margin="0,2,0,0" Text="{Binding TempAverage}" TextAlignment="Center" FontSize="14" ></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
